<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/weekschedule_background"
        android:fillViewport="true">

    <!-- Day columns -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <!-- Heading weekday names -->
        <LinearLayout
                android:id="@+id/column_headers"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:weightSum="6">

            <TextView
                    android:text=""
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            <TextView
                    android:text="Mon"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            <TextView
                    android:text="Tue"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            <TextView
                    android:text="Wed"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            <TextView
                    android:text="Thu"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            <TextView
                    android:text="Fri"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

        </LinearLayout>
        <!-- End heading weekday names -->

        <LinearLayout
                android:id="@+id/weekschedule_daycolumns"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="6">

            <!-- Hour label column -->
            <RelativeLayout
                    android:id="@+id/hourmarker_holder"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingBottom="32dp" />
            <!-- End hour label column -->

            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                <View
                        android:background="@color/weekschedule_lines"
                        android:layout_width="1dp"
                        android:layout_height="match_parent" />

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                <View
                        android:background="@color/weekschedule_lines"
                        android:layout_width="1dp"
                        android:layout_height="match_parent" />

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                <View
                        android:background="@color/weekschedule_lines"
                        android:layout_width="1dp"
                        android:layout_height="match_parent" />

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                <View
                        android:background="@color/weekschedule_lines"
                        android:layout_width="1dp"
                        android:layout_height="match_parent" />

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                <View
                        android:background="@color/weekschedule_lines"
                        android:layout_width="1dp"
                        android:layout_height="match_parent" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
    <!-- End day columns -->

</ScrollView>
